{
    "encrypted_blockdevices": {
        "raidcrypt": {
            "device": "/dev/md0",
            "keystore": "encrypted_databag",
            "keylength": 256
        },
        "local": {
             "file": "/test/local.file",
            "keystore": "local",
            "keyfile": "/etc/secrets/local.key",
            "sparse": false,
            "size": 1000
        },
        "sparse": {
            "file": "/test/sparse.file",
            "keystore": "discard",
            "size": 1000
        }
    },
    "filesystems": {
        "raidcrypt": {
            "fstype": "ext4",
            "mount": "/mnt",
            "noenable": true
        },
        "local": {
            "fstype": "xfs",
            "mount": "/test/local"
        },
        "sparse": {
            "fstype": "ext4",
            "mount": "/test/sparse",
            "noenable": true
        }
    }
}
